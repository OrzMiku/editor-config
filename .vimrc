" =============================================================================
"  Vim 基础 UI 与行为设置
" =============================================================================

" -----------------------------------------------------------------------------
"  行号
" -----------------------------------------------------------------------------
set number
set relativenumber

" -----------------------------------------------------------------------------
"  缩进与制表符
" -----------------------------------------------------------------------------
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent

" -----------------------------------------------------------------------------
"  折行
" -----------------------------------------------------------------------------
set wrap
set linebreak

" -----------------------------------------------------------------------------
"  光标与滚动
" -----------------------------------------------------------------------------
set cursorline
set scrolloff=8
set sidescrolloff=8

" -----------------------------------------------------------------------------
"  鼠标支持
" -----------------------------------------------------------------------------
set mouse=a

" -----------------------------------------------------------------------------
"  剪贴板
" -----------------------------------------------------------------------------
set clipboard+=unnamedplus

" -----------------------------------------------------------------------------
"  搜索
" -----------------------------------------------------------------------------
set ignorecase
set smartcase

" -----------------------------------------------------------------------------
"  外观
" -----------------------------------------------------------------------------
set notermguicolors
set colorcolumn=80

" -----------------------------------------------------------------------------
"  其他顺手的小细节
" -----------------------------------------------------------------------------
set splitbelow
set splitright
